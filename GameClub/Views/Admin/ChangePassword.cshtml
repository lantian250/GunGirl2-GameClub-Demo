@model GameClub.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section main{
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("ChangePassword", "admin", FormMethod.Post))
                        {
                            <input type="text" value="@Model.UserID" class="hidden" name="UserID"/>
                            <div class="form-group">
                                <label for="Password">旧密码</label>
                                @Html.ValidationMessageFor(m=>m.Password)
                                @Html.ValidationMessage("PasswordError")
                                <input type="password" class="form-control" name="Password" id="Password" placeholder="输入账号的原登录密码">
                            </div>
                            <div class="form-group">
                                <label for="ChangePassword">新密码</label>
                                @Html.ValidationMessageFor(m => m.ChangePassword)
                                <input type="password" class="form-control" name="ChangePassword" id="ChangePassword" placeholder="输入新的密码">
                            </div>
                            <div class="form-group">
                                <label for="ChangePasswordTwo">确认新密码</label>
                                @Html.ValidationMessageFor(m => m.ChangePasswordTwo)
                                <input type="password" class="form-control" name="ChangePasswordTwo" id="ChangePasswordTwo" placeholder="请再次输入新密码">
                            </div>
                            <input type="submit" class="btn btn-primary" id="btnotify" value="修改密码">
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
}
@section script{}

