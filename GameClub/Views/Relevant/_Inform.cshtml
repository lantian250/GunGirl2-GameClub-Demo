@model GameClub.ViewModels.InformMessageViewModel
<div class="row">
    @{ Html.RenderPartial("_InformPageTable", Model);}
</div>
<div class="text-center">
    @Ajax.Pager(Model.InformMessages, new PagerOptions { AutoHide = false, PageIndexParameterName = "PageIndex", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>" }).AjaxOptions(a => a.SetUpdateTargetId("InformMessagePageTable").SetDataFormId("SearchForm"))
</div>
<script type="text/javascript">
    $(document).ready(
        function Deal() {
            $("[id=pageIndexInput]").each(function () { $(this).val("@Model.PageIndex") })
            $("[id=IsDescInput]").each(function () { $(this).val("@Model.IsDesc") })
            $("[id=DelLink]").each(function () { $(this).html("<i class='mdi mdi-24px mdi-close-box'></i>") })
        }
    );
</script>